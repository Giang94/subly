<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.subly.controller.ControlPanelController">

    <top>
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem fx:id="newMenuItem" text="New"/>
                        <MenuItem fx:id="openMenuItem" text="Open..."/>
                        <MenuItem fx:id="saveMenuItem" text="Save"/>
                        <MenuItem fx:id="saveAsMenuItem" text="Save As..."/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="exitMenuItem" text="Exit"/>
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem fx:id="undoMenuItem" text="Undo"/>
                        <MenuItem fx:id="redoMenuItem" text="Redo"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <left>
        <VBox fx:id="chaptersPanel"
              xmlns="http://javafx.com/javafx/21"
              xmlns:fx="http://javafx.com/fxml/1"
              spacing="8" prefWidth="260" minWidth="220" maxWidth="400">

            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Chapters"/>
                <Region HBox.hgrow="ALWAYS"/>
                <ToggleButton fx:id="autoSortToggle" text="Auto-sort" selected="true"/>
            </HBox>

            <TextField fx:id="chapterSearchField" promptText="Filter chapters..."/>

            <!--            <HBox spacing="6" alignment="CENTER_LEFT">-->
            <!--                <Button fx:id="addChapterBtn" text="Add"/>-->
            <!--                <Button fx:id="renameChapterBtn" text="Rename" disable="true"/>-->
            <!--                <Button fx:id="deleteChapterBtn" text="Delete" disable="true"/>-->
            <!--                <Region HBox.hgrow="ALWAYS"/>-->
            <!--                <Button fx:id="moveChapterUpBtn" text="Up" disable="true"/>-->
            <!--                <Button fx:id="moveChapterDownBtn" text="Down" disable="true"/>-->
            <!--            </HBox>-->

            <ListView fx:id="chapterListView" VBox.vgrow="ALWAYS">
                <placeholder>
                    <Label text="No chapters yet"/>
                </placeholder>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem fx:id="addChapterMenuItem" text="Add Chapter"/>
                            <SeparatorMenuItem/>
                            <MenuItem fx:id="renameChapterMenuItem" text="Rename"/>
                            <MenuItem fx:id="deleteChapterMenuItem" text="Delete"/>
                            <SeparatorMenuItem/>
                            <MenuItem fx:id="moveUpMenuItem" text="Move Up"/>
                            <MenuItem fx:id="moveDownMenuItem" text="Move Down"/>
                        </items>
                    </ContextMenu>
                </contextMenu>
            </ListView>

            <HBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Total:"/>
                <Label fx:id="chapterCountLabel" text="0"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="selectionInfoLabel" text="" opacity="0.7"/>
            </HBox>
        </VBox>
    </left>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Toolbar -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <ToggleButton fx:id="toggleShowScreenButton" text="Open Show Screen"/>

                <Separator orientation="VERTICAL"/>

                <Label text="Font size:"/>
                <Button fx:id="fontSizeDownButton" text="-" minWidth="30"/>
                <TextField fx:id="fontSizeField" promptText="Size" prefWidth="60"/>
                <Button fx:id="fontSizeUpButton" text="+" minWidth="30"/>

                <Separator orientation="VERTICAL"/>

                <Label text="Text color:"/>
                <ColorPicker fx:id="textColorPicker"/>

                <Separator orientation="VERTICAL"/>

                <Label text="Background:"/>
                <!-- ToggleGroup is created by controller -->
                <RadioButton fx:id="bgTransparentRadio" text="Transparent" selected="true"/>
                <RadioButton fx:id="bgColorRadio" text="Color"/>
                <ColorPicker fx:id="bgColorPicker"/>
                <RadioButton fx:id="bgImageRadio" text="Image"/>
                <TextField fx:id="imagePathField" promptText="Image URI" prefWidth="180"/>
                <Button fx:id="chooseImageButton" text="Browse..." onAction="#onChooseImage"/>

                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Current subtitle preview -->
            <Label fx:id="currentSubtitleLabel"
                   minHeight="60" prefHeight="60" maxHeight="60"
                   style="-fx-border-color: -fx-box-border; -fx-padding: 8;"/>

            <!-- Subtitle table -->
            <TableView fx:id="subtitleTable" VBox.vgrow="ALWAYS" editable="true">
                <columns>
                    <TableColumn fx:id="indexColumn" text="#"/>
                    <TableColumn fx:id="primaryTextColumn" text="Primary Text"/>
                    <TableColumn fx:id="secondaryTextColumn" text="Secondary Text"/>
                </columns>
            </TableView>

            <!-- Navigation -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Button fx:id="prevButton" text="Previous"/>
                <Button fx:id="nextButton" text="Next"/>
            </HBox>
        </VBox>
    </center>

    <padding>
        <Insets top="8" right="8" bottom="8" left="8"/>
    </padding>
</BorderPane>