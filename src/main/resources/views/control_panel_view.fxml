<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.subly.controller.ControlPanelController">

    <top>
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem fx:id="newMenuItem" text="New"/>
                        <MenuItem fx:id="openMenuItem" text="Open..."/>
                        <MenuItem fx:id="saveMenuItem" text="Save"/>
                        <MenuItem fx:id="saveAsMenuItem" text="Save As..."/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="exitMenuItem" text="Exit"/>
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem fx:id="undoMenuItem" text="Undo"/>
                        <MenuItem fx:id="redoMenuItem" text="Redo"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <GridPane fx:id="mainGrid" hgap="12" vgap="14" style="-fx-padding: 8;">
            <columnConstraints>
                <ColumnConstraints minWidth="220" prefWidth="260" maxWidth="400"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="400" prefWidth="600"/>
                <ColumnConstraints minWidth="220" prefWidth="260" maxWidth="400"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>

            <!-- Row 0: Preview spanning columns 0 & 1 -->
            <StackPane fx:id="currentSubtitlePane"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="0"
                       GridPane.columnSpan="2"
                       alignment="CENTER"
                       prefHeight="140"
                       minHeight="120"
                       style="-fx-padding:10; -fx-border-color:-fx-box-border; -fx-border-width:1; -fx-background-color:transparent; -fx-border-radius:3; -fx-background-radius:3;">
                <children>
                    <ImageView fx:id="currentSubtitleImage"
                               preserveRatio="true"
                               fitHeight="60"
                               StackPane.alignment="CENTER"/>
                    <TextFlow fx:id="currentSubtitleTextFlow"
                              textAlignment="CENTER"
                              maxWidth="Infinity"
                              StackPane.alignment="CENTER"
                              style="-fx-padding:0;">
                        <children>
                            <Text fx:id="currentSubtitleText"/>
                        </children>
                    </TextFlow>
                </children>
            </StackPane>

            <!-- Row 0: Toggle buttons in tools column -->
            <HBox GridPane.rowIndex="0"
                  GridPane.columnIndex="2"
                  alignment="TOP_RIGHT"
                  spacing="6"
                  style="-fx-padding:10 0 0 0;">
                <ToggleButton fx:id="presentingModeToggle" text="Editing"/>
                <ToggleButton fx:id="toggleShowScreenButton" text="Open Show Screen"/>
            </HBox>

            <!-- Row 1: Chapters panel -->
            <VBox fx:id="chaptersPanel"
                  GridPane.rowIndex="1"
                  GridPane.columnIndex="0"
                  spacing="14"
                  style="-fx-padding:10; -fx-border-color:-fx-box-border; -fx-border-width:1; -fx-border-radius:3; -fx-background-radius:3;">
                <padding>
                    <Insets top="8" right="8" bottom="8" left="8"/>
                </padding>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Chapters"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
                <ListView fx:id="chapterListView" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Label text="No chapters yet"/>
                    </placeholder>
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem fx:id="addChapterMenuItem" text="Add Chapter"/>
                                <SeparatorMenuItem/>
                                <MenuItem fx:id="renameChapterMenuItem" text="Rename"/>
                                <MenuItem fx:id="deleteChapterMenuItem" text="Delete"/>
                                <SeparatorMenuItem/>
                                <MenuItem fx:id="moveUpMenuItem" text="Move Up"/>
                                <MenuItem fx:id="moveDownMenuItem" text="Move Down"/>
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </ListView>
                <HBox spacing="6" alignment="CENTER_LEFT">
                    <Label text="Total:"/>
                    <Label fx:id="chapterCountLabel" text="0"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="selectionInfoLabel" text="" opacity="0.7"/>
                </HBox>
            </VBox>

            <!-- Row 1: Subtitles center -->
            <VBox GridPane.rowIndex="1"
                  GridPane.columnIndex="1"
                  spacing="14"
                  style="-fx-padding:10; -fx-border-color:-fx-box-border; -fx-border-width:1; -fx-border-radius:3; -fx-background-radius:3;">
                <padding>
                    <Insets top="8" right="8" bottom="8" left="8"/>
                </padding>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Subtitles"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
                <TableView fx:id="subtitleTable" VBox.vgrow="ALWAYS" editable="true" prefWidth="800">
                    <columns>
                        <TableColumn fx:id="indexColumn" text="#"/>
                        <TableColumn fx:id="primaryTextColumn" text="Primary Text"/>
                        <TableColumn fx:id="secondaryTextColumn" text="Secondary Text"/>
                    </columns>
                </TableView>
                <HBox spacing="8" alignment="CENTER">
                    <Button fx:id="prevButton" text="Previous"/>
                    <Button fx:id="nextButton" text="Next"/>
                </HBox>
            </VBox>

            <!-- Row 1: Formatting tools -->
            <!-- File: `resources/views/control_panel_view.fxml` (modified Formatting tools panel snippet) -->
            <VBox fx:id="formatingToolsPanel"
                  GridPane.rowIndex="1"
                  GridPane.columnIndex="2"
                  spacing="14"
                  style="-fx-padding:10; -fx-border-color:-fx-box-border; -fx-border-width:1; -fx-border-radius:3; -fx-background-radius:3;">
                <padding>
                    <Insets top="8" right="8" bottom="8" left="8"/>
                </padding>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Format"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <TitledPane text="Typography" expanded="true">
                    <content>
                        <GridPane hgap="8" vgap="6">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" minWidth="80" prefWidth="80"/>
                                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Font:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="fontFamilyCombo"
                                      promptText="Font"
                                      maxWidth="Infinity"
                                      GridPane.hgrow="ALWAYS"
                                      GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Size:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <Spinner fx:id="fontSizeSpinner"
                                     editable="true"
                                     maxWidth="Infinity"
                                     GridPane.hgrow="ALWAYS"
                                     GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Weight:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="fontWeightCombo"
                                      maxWidth="Infinity"
                                      GridPane.hgrow="ALWAYS"
                                      GridPane.rowIndex="2" GridPane.columnIndex="1">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="LIGHT"/>
                                        <String fx:value="NORMAL"/>
                                        <String fx:value="BOLD"/>
                                        <String fx:value="HEAVY"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>

                            <Label text="Color:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <ColorPicker fx:id="textColorPicker"
                                         maxWidth="Infinity"
                                         GridPane.hgrow="ALWAYS"
                                         GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <Label text="Border:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="borderWeightCombo"
                                      maxWidth="Infinity"
                                      GridPane.hgrow="ALWAYS"
                                      GridPane.rowIndex="4" GridPane.columnIndex="1">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="NONE"/>
                                        <String fx:value="NORMAL"/>
                                        <String fx:value="BOLD"/>
                                        <String fx:value="HEAVY"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>

                            <Label text="Border Color:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                            <ColorPicker fx:id="borderColorPicker"
                                         maxWidth="Infinity"
                                         GridPane.hgrow="ALWAYS"
                                         GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                        </GridPane>
                    </content>
                </TitledPane>
                <Separator/>

                <TitledPane text="Background" expanded="true">
                    <content>
                        <VBox spacing="8">
                            <fx:define>
                                <ToggleGroup fx:id="bgToggleGroup"/>
                            </fx:define>
                            <GridPane hgap="8" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="110" prefWidth="120" halignment="LEFT"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                    <ColumnConstraints minWidth="90" prefWidth="100" halignment="LEFT"/>
                                </columnConstraints>

                                <RadioButton fx:id="bgTransparentRadio"
                                             text="Transparent"
                                             toggleGroup="$bgToggleGroup"
                                             selected="true"
                                             GridPane.rowIndex="0"
                                             GridPane.columnIndex="0"
                                             GridPane.columnSpan="3"/>

                                <RadioButton fx:id="bgColorRadio"
                                             text="Color"
                                             toggleGroup="$bgToggleGroup"
                                             GridPane.rowIndex="1"
                                             GridPane.columnIndex="0"/>
                                <ColorPicker fx:id="bgColorPicker"
                                             disable="true"
                                             maxWidth="Infinity"
                                             GridPane.hgrow="ALWAYS"
                                             GridPane.rowIndex="1"
                                             GridPane.columnIndex="1"
                                             GridPane.columnSpan="2"/>

                                <RadioButton fx:id="bgImageRadio"
                                             text="Image"
                                             toggleGroup="$bgToggleGroup"
                                             GridPane.rowIndex="2"
                                             GridPane.columnIndex="0"/>
                                <TextField fx:id="imagePathField"
                                           promptText="Image URI"
                                           disable="true"
                                           maxWidth="Infinity"
                                           GridPane.hgrow="ALWAYS"
                                           GridPane.rowIndex="2"
                                           GridPane.columnIndex="1"/>
                                <Button fx:id="chooseImageButton"
                                        text="Browse..."
                                        disable="true"
                                        maxWidth="Infinity"
                                        GridPane.hgrow="ALWAYS"
                                        GridPane.rowIndex="2"
                                        GridPane.columnIndex="2"/>
                            </GridPane>
                        </VBox>
                    </content>
                </TitledPane>

                <Region VBox.vgrow="ALWAYS"/>
            </VBox>
        </GridPane>
    </center>

    <padding>
        <Insets top="8" right="8" bottom="8" left="8"/>
    </padding>
</BorderPane>