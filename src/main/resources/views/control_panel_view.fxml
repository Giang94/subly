<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.app.subly.controller.ControlPanelController">

    <!-- Top toolbar with toggle -->
    <top>
        <VBox>
            <MenuBar fx:id="menuBar">
                <Menu text="File">
                    <MenuItem fx:id="openMenuItem" text="Open..."/>
                    <MenuItem fx:id="saveMenuItem" text="Save"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="exitMenuItem" text="Exit"/>
                </Menu>
                <Menu text="Edit">
                    <MenuItem fx:id="undoMenuItem" text="Undo"/>
                    <MenuItem fx:id="redoMenuItem" text="Redo"/>
                </Menu>
            </MenuBar>
            <HBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button text="Open..." fx:id="openFileButton"/>
                <Button text="⚙ Settings" fx:id="settingsButton"/>
                <ToggleButton fx:id="toggleShowScreenButton" text="Show Screen ON/OFF"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center: grid with subtitle list -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Current Subtitle:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label fx:id="currentSubtitleLabel" text="(none)" style="-fx-font-size: 14px; -fx-text-fill: blue;"/>

            <!-- Grid/Table for subtitles -->
            <TableView fx:id="subtitleTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="indexColumn" text="Index" prefWidth="80"/>
                    <TableColumn fx:id="primaryTextColumn" text="Text" prefWidth="400"/>
                    <TableColumn fx:id="secondaryTextColumn" text="Note" prefWidth="400"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom controls -->
    <bottom>
        <HBox alignment="center" spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="prevButton" text="⏮ Prev"/>
            <Button fx:id="nextButton" text="Next ⏭"/>
        </HBox>
    </bottom>

</BorderPane>

