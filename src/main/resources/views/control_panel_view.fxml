<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.app.subly.controller.ControlPanelController">

    <!-- Top toolbar with toggle -->
    <top>
        <VBox>
            <MenuBar fx:id="menuBar">
                <Menu text="File">
                    <MenuItem fx:id="newMenuItem" text="New Project">
                        <graphic>
                            <!-- Placeholder for 16x16 icon -->
                            <Region prefWidth="16" minWidth="16" maxWidth="16" prefHeight="16"/>
                        </graphic>
                    </MenuItem>
                    <MenuItem fx:id="openMenuItem" text="Open..."/>
                    <MenuItem fx:id="saveMenuItem" text="Save"/>
                    <MenuItem fx:id="saveAsMenuItem" text="Save as..."/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="exitMenuItem" text="Exit"/>
                </Menu>
                <Menu text="Edit">
                    <MenuItem fx:id="undoMenuItem" text="Undo">
                        <graphic>
                            <!-- Placeholder for 16x16 icon -->
                            <Region prefWidth="16" minWidth="16" maxWidth="16" prefHeight="16"/>
                        </graphic>
                    </MenuItem>
                    <MenuItem fx:id="redoMenuItem" text="Redo"/>
                </Menu>
            </MenuBar>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <ToggleButton fx:id="toggleShowScreenButton" text="Show Screen ON/OFF"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center: grid with subtitle list -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="10" alignment="CENTER">
                <Label fx:id="currentSubtitleLabel" text="(none)" style="-fx-font-size: 14px; -fx-text-fill: blue;"/>
            </HBox>

            <HBox fx:id="styleToolbar" spacing="10" alignment="CENTER_LEFT"
                  xmlns="http://javafx.com/javafx/24.0.1"
                  xmlns:fx="http://javafx.com/fxml/1">
                <padding>
                    <Insets top="6" right="10" bottom="6" left="10"/>
                </padding>

                <Label text="Font size"/>
                <TextField fx:id="fontSizeField" prefWidth="64" promptText="px"/>

                <!-- Down / Up arrow buttons -->
                <Button fx:id="fontSizeDownButton" text="▼" minWidth="28"/>
                <Button fx:id="fontSizeUpButton" text="▲" minWidth="28"/>

                <Label text="Text color"/>
                <ColorPicker fx:id="textColorPicker"/>

                <Separator orientation="VERTICAL" prefHeight="24"/>

                <Label text="Background"/>
                <fx:define>
                    <ToggleGroup fx:id="bgToggleGroup"/>
                </fx:define>

                <RadioButton fx:id="bgTransparentRadio"
                             text="Transparent"
                             toggleGroup="$bgToggleGroup"
                             selected="true"/>

                <RadioButton fx:id="bgColorRadio"
                             text="Color"
                             toggleGroup="$bgToggleGroup"/>
                <ColorPicker fx:id="bgColorPicker" disable="true"/>

                <RadioButton fx:id="bgImageRadio"
                             text="Image"
                             toggleGroup="$bgToggleGroup"/>
                <Button fx:id="chooseImageButton"
                        text="Choose..."
                        onAction="#onChooseImage"
                        disable="true"/>
                <TextField fx:id="imagePathField"
                           promptText="No image selected"
                           editable="false"
                           prefWidth="220"
                           disable="true"/>
            </HBox>

            <!-- Grid/Table for subtitles -->
            <TableView fx:id="subtitleTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="indexColumn" text="Index" prefWidth="80"/>
                    <TableColumn fx:id="primaryTextColumn" text="Text" prefWidth="400"/>
                    <TableColumn fx:id="secondaryTextColumn" text="Note" prefWidth="400"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom controls -->
    <bottom>
        <HBox alignment="center" spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="prevButton" text="⏮ Prev"/>
            <Button fx:id="nextButton" text="Next ⏭"/>
        </HBox>
    </bottom>

</BorderPane>

